pipeline {
agent none 
stages {
stage ('Git-Clone') {
 agent {
                label "master"
            }
steps {
checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'priya3019-github', url: 'https://github.com/priya3019/devops-june-2022.git']]])
sh 'pwd'
}


}

stage ('Build-Deploy') {
 agent {
                label "Docker-slave"
            }
steps {
script {
sh '''
docker build -t priyappatil/ubuntu /home/ubuntu/devops-june-2022/Docker/app/maven/
docker run -it --rm -d -p 8080:8080 --name calc priyappatil/ubuntu
'''
}

}


}

stage ('push-docker-image') {
 agent {
                label "Docker-slave"
            }
steps {
script {
withCredentials([string(credentialsId: 'dockerhubid', variable: 'dockerhubpwd')]) {
sh 'docker login -u priyappatil -p ${dockerhubpwd}'
}

sh 'docker push priyappatil/ubuntu:maven'
}
}
}



}
}

